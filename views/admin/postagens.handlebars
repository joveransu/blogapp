<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card=body" style="padding: 5px;">
            <h4>{{titulo}}</h4>
            <p>Slug: {{slug}}</p>
            <p>Descrição: {{descricao}}</p>
            <p>Conteúdo: {{conteudo}}</p>
            <p>Categoria: {{categoria.nome}}</p>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success">Editar Postagem</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger">Deletar Postagem</button></a>
            <!--
                <form action="/admin/categorias/deletar" method="post">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger mt-2">Deletar Postagem</button>
                </form>
            -->
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma postagem registrada!</h4>
{{/each}}